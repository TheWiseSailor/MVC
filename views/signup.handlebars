<form class="form signup-form">
  <div class="form-group">
    <label class="display-7" for="name">Name:</label>
    <input class="form-input" type="name" id="name" />
  </div>
  <div class="form-group">
    <label class="display-7" for="email-login">Email:</label>
    <input class="form-input" type="text" id="signup-email" />
  </div>
  <div class="form-group">
    <label class="display-7" for="password-login">Password:</label>
    <input class="form-input" type="password" id="signup-pw" />
  </div>
  <div class="form-group">
    <button class="btn alert-dark" type="submit" id="signupbtn">Sign Up</button>
    <a href="/login">Already have an account?</a>
  </div>
</form>

<script src="/js/signup.js"></script>