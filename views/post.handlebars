<div class="row mt-4">
  <div class="col-md-12">
    <h2>{{post.title}}</h2>
    <p>{{post.description}}</p>
    <p>Author: {{post.user.displayName}}</p>
    <h3>Comments:</h3>
    {{#each post.comments}}
      <p><strong>{{this.user.displayName}}:</strong> {{this.description}}</p>
    {{/each}}
  </div>
</div>